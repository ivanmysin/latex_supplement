@article{li_axonal_1992,
	title = {Axonal and dendritic arborization of an intracellularly labeled chandelier cell in the {CA}1 region of rat hippocampus},
	volume = {90},
	issn = {0014-4819, 1432-1106},
	url = {http://link.springer.com/10.1007/BF00230934},
