	keywords = {Animals, Neurons, gamma-Aminobutyric Acid, Action Potentials, Periodicity, Synapses, Parvalbumins, Glutamic Acid, Septal Nuclei, Neural Inhibition, Models, Neurological, Nerve Net, Electroencephalography},
	file = {Ujfalussy и Kiss - 2006 - How do glutamatergic and GABAergic cells contribut.pdf:/home/ivan/Zotero/storage/RVURC5ST/Ujfalussy и Kiss - 2006 - How do glutamatergic and GABAergic cells contribut.pdf:application/pdf}
