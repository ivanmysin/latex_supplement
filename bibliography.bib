@article{lin_users_2011,
	title = {A User’s Guide to Channelrhodopsin Variants: Features, Limitations and Future Developments},
	volume = {96},
	issn = {0958-0670},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC2995811/},
