	keywords = {Animals, Rats, Models, Biological, Hydrogen-Ion Concentration, Kinetics, Ion Channels, Mitochondria, Liver, Intracellular Membranes, Protons, Cations, Divalent, Anions, Submitochondrial Particles}
}

