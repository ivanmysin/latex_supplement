	file = {Heys и др. - 2016 - Physiological Properties of Neurons in Bat Entorhi.pdf:/home/ivan/Zotero/storage/GDXH9SP9/Heys и др. - 2016 - Physiological Properties of Neurons in Bat Entorhi.pdf:application/pdf}
