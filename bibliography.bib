	journaltitle = {J Neural Eng},
	author = {Baranauskas, Gytis and Maggiolini, Emma and Castagnola, Elisa and Ansaldo, Alberto and Mazzoni, Alberto and Angotzi, Gian Nicola and Vato, Alessandro and Ricci, Davide and Panzeri, Stefano and Fadiga, Luciano},
