@article{vaidya_temporal_2013,
	title = {Temporal synchrony and gamma-to-theta power conversion in the dendrites of {CA}1 pyramidal neurons},
	volume = {16},
	rights = {2013 Nature Publishing Group},
	issn = {1546-1726},
	url = {https://www.nature.com/articles/nn.3562},
	doi = {10.1038/nn.3562},
	abstract = {Timing is a crucial aspect of synaptic integration. For pyramidal neurons that integrate thousands of synaptic inputs spread across hundreds of microns, it is thus a challenge to maintain the timing of incoming inputs at the axo-somatic integration site. Here we show that pyramidal neurons in the rodent hippocampus use a gradient of inductance in the form of hyperpolarization-activated cation-nonselective ({HCN}) channels as an active mechanism to counteract location-dependent temporal differences of dendritic inputs at the soma. Using simultaneous multi-site whole-cell recordings complemented by computational modeling, we find that this intrinsic biophysical mechanism produces temporal synchrony of rhythmic inputs in the theta and gamma frequency ranges across wide regions of the dendritic tree. While gamma and theta oscillations are known to synchronize activity across space in neuronal networks, our results identify a new mechanism by which this synchrony extends to activity within single pyramidal neurons with complex dendritic arbors.},
	pages = {1812--1820},
	number = {12},
	journaltitle = {Nature Neuroscience},
	author = {Vaidya, Sachin P. and Johnston, Daniel},
	urldate = {2019-06-27},
