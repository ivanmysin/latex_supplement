	langid = {english},
	file = {Gilson и Fukai - 2011 - Stability versus Neuronal Specialization for STDP.PDF:/home/ivan/Zotero/storage/S6DMALYS/Gilson и Fukai - 2011 - Stability versus Neuronal Specialization for STDP.PDF:application/pdf}
}

@article{mizuseki_preconfigured_2013,
